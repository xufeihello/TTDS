<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 轮胎测试数据系统</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="#" class="navbar-brand"><img style="height:30px;margin-top:-5px;" src="~/Images/database.png" /></a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("轮胎测试数据系统", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    <li>@Html.ActionLink("报表展示", "Report", "Report")</li>
                    @if(@Session["Role"]==null)
                    {
                        @Html.Action("Login", "Authentication");
                    }
                    @if (@Session["Role"].ToString() == "Admin" || @Session["Role"].ToString() == "Supervisor")
                    {
                        <li>@Html.ActionLink("数据录入", "Logging", "Logging")</li>
                    }
                    @if (@Session["Role"].ToString() == "Admin")
                    {
                        <li>@Html.ActionLink("用户管理", "Users", "Management")</li>
                    }
                    }
                    <li>@Html.ActionLink("关于", "About", "Home")</li>
                    @*<li>@Html.ActionLink("联系方式", "Contact", "Home")</li>*@
                    <li>
                        <a class="glyphicon glyphicon-user" style="margin-left:380px;" onclick="window.location.href='/Management/LoginUser';">@Session["UserName"]</a>
                    </li>
                    <li>
                        <a style="margin-top:3px;color:#fff;" href="/Authentication/logout">注销</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="clear:both;">
            <p>&copy; @DateTime.Now.Year - 轮胎测试数据系统</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
